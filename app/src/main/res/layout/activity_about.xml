<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AboutActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="100dp"
                android:paddingRight="100dp"
                android:paddingTop="50dp"
                android:paddingBottom="50dp"
                android:layout_gravity="center"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="You can use it to share or transfer files without internet and manage all of your files in one place with File Manger."
/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Features : "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="1. Share multiple content from your video, photo, music and applications."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="2. Share with a max speed up to 25MB/s."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="3. No internet connection is required: setup a hotspot and connect to it using QR code."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="4. Share folders as they are for backup and other purposes."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="5. Light UI: Works faster even on low-end devices."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="6. Speed-oriented: optimized for speed"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="5. Dark Mode : Save your phone's battery and also your Beautiful Eyes by using Dark Mode."/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:linksClickable="true"
                android:autoLink="web"
                android:text="Credits:
This application uses Open Source components. You can find the source code of their open source projects along with license information below. We acknowledge and are grateful to these developers for their contributions to open source.

Lightspeed Source Code : https://github.com/Techno3Gamma/lightspeed-android"/>

<TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
            android:paddingRight="10dp"
    android:autoLink="web"
    android:linksClickable="true"
            android:text="Source Project: Trebleshot https://github.com/trebleshot/android
Copyright 2013 Yahoo! Inc. All right reserved.
License (GNU General Public License v2.0) https://github.com/trebleshot/android/blob/master/COPYING"

                android:paddingBottom="5dp"/>




            <TextView
                android:id="@+id/t3g_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="80sp"
                android:gravity="center_horizontal"
                android:text="From the developers of Students Guide - Techno3Gamma"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
